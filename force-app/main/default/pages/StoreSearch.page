<apex:page applyHtmlTag="true" showHeader="true" cache="False" sidebar="True" standardStylesheets="True" id="page">
    <meta charset="utf-8" />
    <header style="width:100%; height:75px; background-color:#666; color:#fff;">
        <h2>
            Store Search: Example Visualforce Page
        </h2>
    </header>
    <main>
        <div class="container-fluid">
            <div class="row">
                <!--Side Bar Area-->
                <div class="col-2 bg-light">
                    <h5>Here is the sidebar</h5>
                </div>

                <!--Spacing-->
                <div class="col-1"></div>

                <!--Main Content Area-->
                <div class="col-9 bg-light">
                    <h2>
                        Here is the actual StoreSearch component:
                    </h2>
                    <c:StoreSearch />
                    <div id="search-result-area"> 
 					    <span id="loader-icon-container"></span>
                    	<h1 id="search-status"></h1>
                        <p id="search-results"></p>
                    </div>
                </div>
            </div>
        </div>
    </main>
</apex:page>